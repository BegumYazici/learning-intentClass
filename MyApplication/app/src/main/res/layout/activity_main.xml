<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="intentclass.begi.com.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sms sending and mail sending example make use Intent class"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sendSms"
        android:layout_marginTop="10dp"
        android:text="SMS SEND"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sendMail"
        android:layout_marginTop="10dp"
        android:text="MAIL SEND"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
